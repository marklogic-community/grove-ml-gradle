{
  "role-name": "%%mlAppName%%-role",
  "description": "A role for users of the %%mlAppName%% application",

  "permission": [{
    "capability": "execute",
    "role-name": "%%mlAppName%%-role"
  }, {
    "capability": "update",
    "role-name": "%%mlAppName%%-role"
  }, {
    "capability": "insert",
    "role-name": "%%mlAppName%%-role"
  }, {
    "capability": "read",
    "role-name": "%%mlAppName%%-role"
  }],

  "privilege": [{
    "privilege-name": "rest-reader",
    "action": "http://marklogic.com/xdmp/privileges/rest-reader",
    "kind": "execute"
  }, {
    "privilege-name": "rest-writer",
    "action": "http://marklogic.com/xdmp/privileges/rest-writer",
    "kind": "execute"
  }, {
    "privilege-name": "xdmp:add-response-header",
    "action": "http://marklogic.com/xdmp/privileges/xdmp-add-response-header",
    "kind": "execute"
  }]
}
